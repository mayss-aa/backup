<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.Controllers.back.CategorieController">
    <top>
        <!-- Navbar Admin -->
        <HBox alignment="CENTER_LEFT" prefHeight="60" spacing="20" style="-fx-background-color: #2c3e50;">
            <padding><Insets left="20.0" right="20.0" /></padding>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitHeight="32" fitWidth="32" preserveRatio="true">
                    <image><Image url="@../Images/logo.png" /></image>
                </ImageView>
                <Text fill="white" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Admin Panel" />
            </HBox>
            <HBox alignment="CENTER" spacing="30">
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="Dashboard" />
                <Button fx:id="Produits" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="Produits" />
                <Button fx:id="Catégories" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Catégories" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="Commandes" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="Utilisateurs" />
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                <Circle fill="#3498db" radius="20" />
                <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Admin" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Déconnexion">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                            <image><Image url="@../Images/logout.png" /></image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </HBox>
    </top>

    <center>
        <!-- Main Content -->
        <VBox spacing="20" style="-fx-background-color: #f5f6fa;">
            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Text fill="#2c3e50" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestion des Catégories" />
            </HBox>

            <!-- Search and Filter -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <TextField fx:id="searchField" prefWidth="300" promptText="Rechercher une catégorie..." style="-fx-background-radius: 5; -fx-border-radius: 5;">
                    <padding><Insets left="10.0" /></padding>
                </TextField>
                <ComboBox fx:id="sortComboBox" promptText="Trier par" style="-fx-background-radius: 5;" />
                <ComboBox fx:id="filterComboBox" promptText="Filtrer par catégorie" style="-fx-background-radius: 5;" />
                <Button style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Filtrer" />
            </HBox>

            <!-- Formulaire Catégorie -->
            <GridPane hgap="15" vgap="15">
                <padding><Insets top="10" bottom="10" left="10" right="10"/></padding>

                <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="tfNom" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="tfDescription" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Saison de Récolte:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="tfSaison" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Température Idéale:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="tfTemperature" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </GridPane>

            <!-- TableView -->
            <TableView fx:id="categorieTable" prefHeight="235.0" prefWidth="845.0">
                <columns>
                    <TableColumn fx:id="colNom" prefWidth="150" text="Nom" />
                    <TableColumn fx:id="colDescription" prefWidth="250" text="Description" />
                    <TableColumn fx:id="colSaison" prefWidth="150" text="Saison de Récolte" />
                    <TableColumn fx:id="colTemperature" prefWidth="150" text="Température Idéale" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <!-- Boutons CRUD -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="btnAdd" text="Ajouter" onAction="#handleAdd" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" prefWidth="100"/>
                <Button fx:id="btnUpdate" text="Modifier" onAction="#handleUpdate" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" prefWidth="100"/>
                <Button fx:id="btnDelete" text="Supprimer" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" prefWidth="100"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>

