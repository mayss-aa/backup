<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.Controllers.back.ProduitController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60" spacing="20" style="-fx-background-color: #2c3e50;">
            <padding><Insets left="20.0" right="20.0" /></padding>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitHeight="32" fitWidth="32" preserveRatio="true">
                    <image><Image url="@../Images/logo.png" /></image>
                </ImageView>
                <Text fill="white" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Admin Panel" />
            </HBox>
            <HBox alignment="CENTER" spacing="30">
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="Dashboard" />
                <Button fx:id="Produits" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Produits" />
                <Button fx:id="Catégories" onAction="#categorie" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="Catégories" />
                <Button fx:id="Fournisseurs" onAction="#fournisseur"  style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="Fournisseurs" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="Utilisateurs" />
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                <Circle fill="#3498db" radius="20" />
                <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Admin" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Déconnexion">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                            <image><Image url="@../Images/logout.png" /></image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-background-color: #f5f6fa;">
            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Text fill="#2c3e50" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestion des Produits" />
            </HBox>
            <GridPane hgap="15" vgap="10">
                <padding><Insets top="10" bottom="10" left="10" right="10"/></padding>
                <Label text="Nom Produit:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="tfNomProduit" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label text="Cycle Culture:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="tfCycleCulture" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <Label text="Quantité Produit:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="tfQuantiteProd" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                <Label text="Quantité Vendue:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="tfQuantiteVendue" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                <Label text="Unité:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="tfUnite" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                <Label text="Date Semis:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <DatePicker fx:id="dpDateSemis" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                <Label text="Date Récolte:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                <DatePicker fx:id="dpDateRecolte" GridPane.rowIndex="6" GridPane.columnIndex="1" />
                <Label text="Catégorie:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                <ComboBox fx:id="cbCategorie" prefWidth="300" GridPane.rowIndex="7" GridPane.columnIndex="1" />
                <Label text="Fournisseur:" GridPane.rowIndex="8" GridPane.columnIndex="0" />
                <ComboBox fx:id="cbFournisseur" prefWidth="300" GridPane.rowIndex="8" GridPane.columnIndex="1" />
            </GridPane>

            <TableView fx:id="tableProduit" prefHeight="235.0" prefWidth="900.0">
                <columns>
                    <TableColumn fx:id="colNom" prefWidth="150" text="Nom" />
                    <TableColumn fx:id="colCycle" prefWidth="150" text="Cycle" />
                    <TableColumn fx:id="colCategorie" prefWidth="150" text="Catégorie" />
                    <TableColumn fx:id="colFournisseur" prefWidth="150" text="Fournisseur" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Ajouter" onAction="#handleAdd" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" prefWidth="100"/>
                <Button text="Modifier" onAction="#handleUpdate" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" prefWidth="100" />
                <Button text="Supprimer" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" prefWidth="100" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
